<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @list.photo.key %>);">
  <div class="container">
    <%= link_to "Go back", lists_path, class: 'btn btn-outline-light' %>
  </div>
</div>


<div class="container py-3">
     <div class="d-flex align-items-center justify-content-between mb-3">
      <h2 class="mb-0"><%= @list.name %></h2>
    <%= link_to "Add bookmark", new_list_bookmark_path(@list), style: "text-decoration:none;", class: "btn btn-outline-dark"%>
</div>


<%@list.bookmarks.each do |bookmark| %>
<%= bookmark.movie.title %>
<%= bookmark.comment %>
 <%= link_to "Delete",  bookmark_path(bookmark),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>

<% end %>
