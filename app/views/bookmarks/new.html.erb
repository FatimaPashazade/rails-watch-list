
        <h3>Add a movie to your <%= @list.name %> list</h3>
        <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.association :movie, prompt: "Select a movie", input_html: {data: { controller: "select"}} %>
        <%= f.text_area :comment, placeholder: 'Enter a comment', rows: 5, id: 'comment', style: 'border: 2px solid #ccc; border-radius: 5px; padding: 10px; font-size: 16px; resize: none; width: 100%; max-width:100%; height:50px ' %>
